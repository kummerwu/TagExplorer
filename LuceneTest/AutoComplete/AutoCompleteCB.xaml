<UserControl x:Class="TagExplorer.AutoComplete.AutoCompleteCB" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TagExplorer.AutoComplete"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Canvas Margin="0">
        <ComboBox Name="comboBox" Height="25" Width="250" Margin="0,0,0,0" Background="BurlyWood"
                  SelectionChanged="comboBox_SelectionChanged" DropDownClosed="ComboBox_DropDownClosed"></ComboBox>
        <TextBox Name="textBox" Width="250" Height="25" Margin="0,0,0,0"
                 TextChanged="textBox_TextChanged"  KeyDown="TextBox_KeyDown" PreviewKeyDown="TextBox_PreviewKeyDown" ></TextBox>
    </Canvas>
</UserControl>
